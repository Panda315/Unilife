    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-regular-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.2.1",
    "concurrently": "^5.1.0",
    "config": "^3.2.5",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "moment": "^2.29.4",
    "mongoose": "^5.8.11",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pretty-rating-react": "^2.1.1",
    "react-use-cart": "^1.13.0",
    "popups": "^1.1.3",
    "react-confirm-box": "^1.2.0",
